import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
     Scanner obj = new Scanner(System.in);
        int x = obj.nextInt();
        if ( x <= 0 )
        {
            System.out.println("Invalid Input");
        }
        else
        {
            int reversed = 0;
            while (x > 0)
            {
                int digit = x % 10;        
                reversed = reversed * 10 + digit;
                x = x / 10;
            }
            System.out.println(reversed);
           
        }    
    }
}

 
