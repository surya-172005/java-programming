import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int x = obj.nextInt();
        int number = x;
        int sum = 0;
        while (x > 0 ) {
            sum += x % 10;
            x /= 10;
        }
        if (number % sum == 0) { 
            System.out.println("Harshad Number");
        } else { 
            System.out.println("Not Harshad Number");
        }
      
    }
}
