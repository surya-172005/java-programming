import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int a = obj.nextInt();
        int b = obj.nextInt();
        int c = obj.nextInt();
        double  profit = (b-c) * a - 100;
        System.out.printf("Number of copies sold:%d",a);
        System.out.printf("\nCost of each copy:%d",b);
        System.out.printf("\nCost spent by agency on each newspaper:%d",c);
        System.out.printf("\nThe profit obtained is Rs.%.2f",profit);
        
    }
}
